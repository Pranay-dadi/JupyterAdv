{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react",
    "lib": ["DOM", "ES2018", "ES2020.Intl"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "ES2018",
    "types": ["jest", "express", "cors", "body-parser", "sqlite3", "uuid", "node"]
  },
  "include": ["src/**/*", "src/types/**/*"],
 // "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
