{
  "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "composite": true,
      "declaration": true,
      "esModuleInterop": true,
      "incremental": true,
      "lib": ["DOM", "ES2018"],
      "module": "esnext",
      "moduleResolution": "node",
      "noEmitOnError": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "outDir": "lib",
      "rootDir": "src",
      "strict": true,
      "strictNullChecks": true,
      "target": "ES2018"
  },
  "include": ["src/*"]
}